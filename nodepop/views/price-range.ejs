<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href="/stylesheets/form.css">

  <title>Document</title>
</head>

<body>

  <% include title.ejs %>
  <form action="/range/" method="get">
     <select  id="rango">
    <option value="50-200" name = "price"> entre 50 y 200</option>
    <option value="200-2000" name = "price">entre 200 y 2000</option>
  </select>
  <input type="submit" value="Mostrar">
  

  </form>
  <ul class="label">
    <li class="">
      <a href="http://127.0.0.1:3001/range/559-800" target="_blank" rel="noreferrer noopener">precio entre 559 y 800 euros </a>
    </li>
    <li>
      <a href="http://127.0.0.1:3001/range/5000-20000" target="_blank" rel="noreferrer noopener">precio entre 5000 y 20000 euros </a>
    </li>
  </ul>

  <div class="container">
    <% priceRange.forEach(elem=> { %>
      <p>Articulo <%= elem.name %>
          <%= elem.price %> euros
            <img class="image" src="../images/<%= elem.img %>.jpg" />
            <% }) %>
      </p>

  </div>
  
  



</body>

</html>